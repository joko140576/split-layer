<body>
  <!-- JAM & BRANDING -->
  <div class="topbar">
    <div class="branding">Present by DKM & HCC</div>
    <div class="clock" id="clock"></div>
  </div>

  <div class="container">
    <!-- VIDEO -->
    <div class="left">
      <video id="videoPlayer" autoplay playsinline muted>
        <source id="videoSource" src="" type="video/mp4">
        Browser kamu tidak mendukung video tag.
      </video>
    </div>

    <!-- GAMBAR -->
    <div class="right">
      <img id="slideshow" src="" alt="slideshow">
    </div>
  </div>

  <!-- TEXT BERJALAN -->
  <div class="bottom">
    <div class="scroll-text" id="runningText">
      Ayo insan-insan PT SSI , bekerja dengan prinsip Budaya Perusahaan SIAP = Solid - Integritas - Adaptif - Profesional  &nbsp;&nbsp;
    </div>
  </div>

  <!-- KONTROL -->
  <div class="controls">
    <button id="playPause">Pause</button>
    <button id="muteBtn">Mute</button>
    <button id="nextVideo">Next Video</button>
  </div>

  <script>
    // ----------------- VIDEO -----------------
    const videoFiles = ["video1.mp4", "video2.mp4", "video3.mp4"];
    let videoIndex = 0;
    const videoPlayer = document.getElementById("videoPlayer");
    const videoSource = document.getElementById("videoSource");

    function playVideo(index) {
      videoSource.src = videoFiles[index];
      videoPlayer.load();
      videoPlayer.play().catch(err => console.error("Autoplay error:", err));
    }

    videoPlayer.addEventListener("ended", () => {
      videoIndex = (videoIndex + 1) % videoFiles.length;
      playVideo(videoIndex);
    });

    playVideo(videoIndex);

    // ----------------- SLIDESHOW GAMBAR -----------------
    const imageFiles = ["gambar1.png", "gambar2.png", "gambar3.png"];
    let imgIndex = 0;
    const slideshow = document.getElementById("slideshow");

    function showImage() {
      slideshow.src = imageFiles[imgIndex];
      imgIndex = (imgIndex + 1) % imageFiles.length;
    }

    showImage();
    setInterval(showImage, 5000);

    // ----------------- TEXT BERJALAN -----------------
    const runningText = document.getElementById("runningText");
    runningText.innerHTML = runningText.innerHTML.repeat(2);

    // ----------------- JAM & TANGGAL -----------------
    function updateClock() {
      const now = new Date();
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      const dateStr = now.toLocaleDateString('id-ID', options);
      const timeStr = now.toLocaleTimeString('id-ID');
      document.getElementById("clock").textContent = dateStr + " | " + timeStr;
    }
    setInterval(updateClock, 1000);
    updateClock();

    // ----------------- KONTROL -----------------
    const playPauseBtn = document.getElementById("playPause");
    const muteBtn = document.getElementById("muteBtn");
    const nextBtn = document.getElementById("nextVideo");

    playPauseBtn.addEventListener("click", () => {
      if (videoPlayer.paused) {
        videoPlayer.play();
        playPauseBtn.textContent = "Pause";
      } else {
        videoPlayer.pause();
        playPauseBtn.textContent = "Play";
      }
    });

    muteBtn.addEventListener("click", () => {
      videoPlayer.muted = !videoPlayer.muted;
      muteBtn.textContent = videoPlayer.muted ? "Unmute" : "Mute";
    });

    nextBtn.addEventListener("click", () => {
      videoIndex = (videoIndex + 1) % videoFiles.length;
      playVideo(videoIndex);
    });
  </script>
</body>
