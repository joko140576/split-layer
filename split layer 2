    }

    .clock {
      color: #0f0;
      font-size: 26px;
      font-weight: bold;
      text-shadow: 0 0 8px #0f0, 0 0 12px #0f0;
    }

    .container {
      display: flex;
      height: calc(100vh - 150px);
      border: 2px solid white;
    }

    .left {
      flex: 1;
      background: black;
      border-right: 2px solid white;
    }

    .left video {
      width: 100%;
      height: 100%;
      object-fit: contain; /* agar video full tanpa kepotong */
      background: black;
      display: block;
    }

    .right {
      width: 400px;
